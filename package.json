{
  "name": "vscode-bookmark-lines",
  "displayName": "vscode-bookmark-lines",
  "publisher": "midnightsyntax",
  "description": "Bookmark lines in your code to navigate between them faster.",
  "icon": "images/logo.png",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "bookmark",
    "bookmarks",
    "mark",
    "jump",
    "navigation",
    "multi-cursor"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/midnightsyntax/highlight-bookmarks-english.git"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "colors": [
      {
        "id": "bookmarkLines.activeFile",
        "description": "Color for the current active file in bookmarks view",
        "defaults": {
          "dark": "#F44336",
          "light": "#007ACC",
          "highContrast": "#F44336"
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "bookmarksLines-view",
          "title": "Line Bookmarks",
          "icon": "images/icon.svg"
        }
      ]
    },
    "views": {
      "bookmarksLines-view": [
        {
          "id": "bookmarks-list",
          "name": "Line Bookmarks"
        }
      ]
    },
    "commands": [
      {
        "command": "bookmarkLines.toggleBookmarks",
        "title": "Toggle Code Bookmarks"
      },
      {
        "command": "bookmarkLines.clearAllBookmarks",
        "title": "Clear All Code Bookmarks",
        "icon": "$(trash)"
      },
      {
        "command": "bookmarkLines.clearCurrentFileBookmarks",
        "title": "Clear Code Bookmarks in current file"
      },
      {
        "command": "bookmarkLines.navigateToNextBookmark",
        "title": "Navigate to next Code Bookmark"
      },
      {
        "command": "bookmarkLines.navigateToPrevBookmark",
        "title": "Navigate to previous Code Bookmark"
      },
      {
        "command": "bookmarkLines.deleteBookmark",
        "title": "Delete Code Bookmark"
      },
      {
        "command": "bookmarkLines.addNote",
        "title": "Add note"
      }
    ],
    "keybindings": [
      {
        "command": "bookmarkLines.toggleBookmarks",
        "key": "alt+b",
        "mac": "option+b",
        "when": "editorTextFocus"
      },
      {
        "command": "bookmarkLines.clearCurrentFileBookmarks",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b",
        "when": "editorTextFocus"
      },
      {
        "command": "bookmarkLines.navigateToNextBookmark",
        "key": "f2",
        "mac": "f2",
        "when": "editorTextFocus"
      },
      {
        "command": "bookmarkLines.navigateToPrevBookmark",
        "key": "shift+f2",
        "mac": "shift+f2",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Bookmark Lines",
      "properties": {
        "bookmarkLines.alignTopOnNavigation": {
          "type": "boolean",
          "default": false,
          "description": "If set bookmarked line will become the topmost when using next / previous navigation commands"
        },
        "bookmarkLines.renderGutter": {
          "type": "boolean",
          "default": true,
          "description": "If enabled, displays a gutter icon next to bookmarked lines."
        },
        "bookmarkLines.renderLine": {
          "type": "boolean",
          "default": true,
          "description": "If enabled, displays a line to highlight the bookmarked lines."
        },
        "bookmarkLines.lineColor": {
          "type": "string",
          "default": "#F44336",
          "markdownDescription": "Specifies what color to use for the line bookmarks highlight. Use a valid HTML color code (e.g., `#FF0000`, `red`, `rgb(255,0,0)`)."
        },
        "bookmarkLines.lineWidth": {
          "type": "number",
          "default": 1
        },
        "bookmarkLines.lineStyle": {
          "type": "string",
          "enum": [
            "solid",
            "dashed",
            "inset",
            "double",
            "groove",
            "outset",
            "ridge"
          ],
          "default": "solid",
          "markdownDescription": "Specifies the style used to highlight line bookmarks in the editor."
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "bookmarkLines.clearAllBookmarks",
          "when": "view == bookmarks-list",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "bookmarkLines.deleteBookmark",
          "when": "view == bookmarks-list && viewItem == bookmark",
          "group": "inline"
        },
        {
          "command": "bookmarkLines.addNote",
          "when": "view == bookmarks-list && viewItem == bookmark",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.86.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.57.1",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3"
  }
}
