{
  "name": "line-bookmarks",
  "displayName": "line-bookmarks",
  "publisher": "denjay",
  "description": "VS Code extension,Bookmark with highlight lines",
  "icon": "images/logo.png",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "bookmark",
    "bookmarks",
    "mark",
    "jump",
    "navigation",
    "multi-cursor"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/denjay/line-bookmarks.git"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "colors": [
      {
        "id": "lineBookmarks.activeFile",
        "description": "Color for the current active file in bookmarks view",
        "defaults": {
          "dark": "#F44336",
          "light": "#007ACC",
          "highContrast": "#F44336"
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "bookmarks-view",
          "title": "Line Bookmarks",
          "icon": "images/icon.svg"
        }
      ]
    },
    "views": {
      "bookmarks-view": [
        {
          "id": "bookmarks-list",
          "name": "Bookmarks",
          "icon": "images/icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "lineBookmarks.toggleBookmarks",
        "title": "line-bookmarks: Toogle Bookmarks"
      },
      {
        "command": "lineBookmarks.clearAllBookmarks",
        "title": "line-bookmarks: Clear All Bookmarks",
        "icon": "$(trash)"
      },
      {
        "command": "lineBookmarks.clearCurrentFileBookmarks",
        "title": "line-bookmarks: Clear Current File Bookmarks"
      },
      {
        "command": "lineBookmarks.navigateToNextBookmark",
        "title": "line-bookmarks: Move cursor to the next bookmark"
      },
      {
        "command": "lineBookmarks.navigateToPrevBookmark",
        "title": "line-bookmarks: Move cursor to the previous bookmark"
      },
      {
        "command": "lineBookmarks.deleteBookmark",
        "title": "Delete"
      },
      {
        "command": "lineBookmarks.addNote",
        "title": "Add note"
      }
    ],
    "keybindings": [
      {
        "command": "lineBookmarks.toogleBookmarks",
        "key": "alt+b",
        "mac": "option+b",
        "when": "editorTextFocus"
      },
      {
        "command": "lineBookmarks.clearCurrentFileBookmarks",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b",
        "when": "editorTextFocus"
      },
      {
        "command": "lineBookmarks.navigateToNextBookmark",
        "key": "f2",
        "mac": "f2",
        "when": "editorTextFocus"
      },
      {
        "command": "lineBookmarks.navigateToPrevBookmark",
        "key": "shift+f2",
        "mac": "shift+f2",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Line Bookmarks",
      "properties": {
        "lineBookmarks.alignTopOnNavigation": {
          "type": "boolean",
          "default": false,
          "description": "If set bookmarked line will become the topmost when using next / previous navigation commands"
        },
        "lineBookmarks.renderGutter": {
          "type": "boolean",
          "default": true,
          "description": "If set render an icon in the gutter"
        },
        "lineBookmarks.renderLine": {
          "type": "boolean",
          "default": true,
          "description": "If set render a line on the bookmark"
        },
        "lineBookmarks.lineColor": {
          "type": [
            "string"
          ],
          "default": "#F44336",
          "description": "Change the line color. (Ex: 'red', '#FFF' #FFFFFFF, 'RGB(255,255,255)','RGB(255, 255, 255. 0.5) )"
        },
        "lineBookmarks.lineWidth": {
          "type": [
            "string"
          ],
          "default": "1px"
        },
        "lineBookmarks.lineStyle": {
          "type": [
            "string"
          ],
          "enum": [
            "solid",
            "dashed",
            "inset",
            "double",
            "groove",
            "outset",
            "ridge"
          ],
          "default": "solid"
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "lineBookmarks.clearAllBookmarks",
          "when": "view == bookmarks-list",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "lineBookmarks.deleteBookmark",
          "when": "view == bookmarks-list && viewItem == bookmark",
          "group": "inline"
        },
        {
          "command": "lineBookmarks.addNote",
          "when": "view == bookmarks-list && viewItem == bookmark",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.86.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.57.1",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3"
  }
}
